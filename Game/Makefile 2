

OBJS = AssetManager.o ScreenObject.o World.o Editor.o Character.o
CXX = g++
CXXFLAGS = -Wall -std=c++11
LDLIBS = -lsfml-graphics -lsfml-audio -lsfml-window -lsfml-system
CPLUS_INCLUDE_PATH = AssetManager
vpath %.hpp Assets World Editor Characters
vpath %.o Assets World Editor Characters
all: main.exe

# LDFLAGS = "-L/c/SFML-2.5.1/lib"
# CPPFLAGS = "-I/c/SFML-2.5.1/include"

edit : $(objects)
	$(CXX) -o edit $(objects)


run: $(OBJS)
	$(CXX) -o main.exe $(OBJS) $(LDLIBS) $(LDFLAGS)
	./main.exe

main.o: $(OBJS)
	$(CXX) -o main.exe $(OBJS) $(LDLIBS) $(LDFLAGS)

World.o: World.hpp ScreenObject.hpp
AssetManager.o: AssetManager.hpp
Editor.o: Editor.hpp
ScreenObject.o: ScreenObject.hpp AssetManager.hpp

Character.o: Character.hpp

clean:
	$(RM) game $(OBJS)

